            {% endif %}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-lg-5">
            <div class="shadow mt-5">
                <h3 class="c-top">Coordonnées</h3>
                <div class="d-flex justify-content-between align-items-start pt-3">
                    <img src="/themes/site/img/minimap.png" alt="" class="mr-3">
                    <div>
                        {% if content.field_adresse.0 is not empty %}<b>Adresse :</b> {{ content.field_adresse }} <br>{% endif %}
                        {% if content.field_ville.0 is not empty %}<b>Ville :</b> {{ content.field_ville }} <br>{% endif %}
                        {% if content.field_fax.0 is not empty %}<b>Fax :</b> {{ content.field_fax }} <br>{% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="shadow mt-5">
                <h3 class="c-top">Informations</h3>
                <div class="d-flex justify-content-center align-items-start pt-3">
                    <img src="/themes/site/img/doc.png" alt="" class="mr-3">
                    <div>
                        {% if content.field_unite.0 is not empty %}<b>Unité :</b> {{ content.field_unite }}
                            <br>{% endif %}
                        {% if content.field_responsable.0 is not empty %}<b>Responsable de l’unité
                            :</b> {{ content.field_responsable }} <br>{% endif %}
                        {% if content.field_pole.0 is not empty %}<b>Pôle :</b> {{ content.field_pole.0 }}
                            {% if content.field_pole.1 is not empty %}, {{ content.field_pole.1 }}{% endif %}
                            {% if content.field_pole.2 is not empty %}, {{ content.field_pole.2 }}{% endif %}
                            <br>
                        {% endif %}
                        {% if content.field_secteur.0 is not empty %}
                            <b>Secteur :</b> {{ content.field_secteur.0 }}
                            {% if content.field_secteur.1 is not empty %}, {{ content.field_secteur.1 }}{% endif %}
                            {% if content.field_secteur.2 is not empty %}, {{ content.field_secteur.2 }}{% endif %}
                            <br>
                        {% endif %}
                        {% if content.field_prestation.0 is not empty %}<b>Type de consultation
                            :</b> {{ content.field_prestation }} <br>{% endif %}
                        {% if content.field_patients.0 is not empty %}
                            <b>Type de patient :</b> {{ content.field_patients.0 }}
                            {% if content.field_patients.1 is not empty %}, {{ content.field_patients.1 }}{% endif %}
                            {% if content.field_patients.2 is not empty %}, {{ content.field_patients.2 }}{% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if content.field_gps_latitude.0 is not empty %}
        <div class="marker" data-lat="{{ content.field_gps_latitude }}"
             data-lng="{{ content.field_gps_longitude }}"></div>
        <div class="with_shadow">
            <div id="mapid" class="mt-5 mb-3 w-100"></div>
        </div>
    {% endif %}
</div>