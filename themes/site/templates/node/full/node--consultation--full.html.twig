<div class="content-page">
    {{ content.field_image }}
    <br>
    <div class="row">
        <div class="col-md-12">
            {% if content.field_texte_de_presentation.0 is not empty %}
                <blockquote class="mt-4">
                    {{ content.field_texte_de_presentation }}
                </blockquote>
            {% endif %}
            {% if content.field_horaires.0 is not empty %}
                <h2>Horaires</h2>
            {% endif %}
        </div>
        <div class="col-md-7">
            {% if content.field_horaires.0 is not empty %}
                <p>{{ content.field_horaires }}</p>
            {% endif %}
        </div>
        <div class="col-md-5">
            {% if content.field_telephone.0 is not empty %}
                <a href="tel:{{ content.field_telephone }}" class="btn btn-outline-info d-inline-flex">
