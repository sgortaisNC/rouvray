<div class="list-result content-page mt-5">
    {% for article in data %}
        <div class="result py-4 px-4">
            <div class="teaser">
                <a href="{{ article.url }}"><h4>{{ article.title }}</h4></a>
                <div class="d-flex justify-content-start align-items-center my-2">
                    <div class="w-25">
                        <img src="{{ article.image.url }}" alt="{{ article.image.alt }}" class="img-fluid">
                    </div>
                    <div class="d-flex flex-column justify-content-around w-25">
                        {% if article.date_deb is not empty %}
                            <div class="text-center">
                                <i class="fas fa-hourglass-start fa-2x text-warning"></i> <br>
                                {{ article.date_deb }}
                            </div>
                        {% endif %}
                        {% if article.date_fin is not empty %}
                            <br>
                            <div class="text-center">
                                <i class="fas fa-hourglass-end fa-2x text-warning"></i> <br>
                                {{ article.date_fin }}
                            </div>
                        {% endif %}
                    </div>

                    <div class="text-center w-25">
                        {% if article.lieu is not empty %}
                            <i class="fas fa-map-marker fa-2x text-warning"></i><br>
                            {{ article.lieu }}
                        {% endif %}
                    </div>

                    <div class="w-25">
                        {{ article.body | striptags('<b><strong><ul><li><a><img><ol><u><i>') | raw }}
                    </div>
                </div>
            </div>
            <a href="{{ article.url }}" class="align-self-center btn btn-outline-light">En savoir plus</a>
        </div>
    {% endfor %}
</div>
